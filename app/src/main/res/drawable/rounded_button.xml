<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <stroke android:width="1dp" android:color="@color/colorBluest"/>
        <corners android:radius="@dimen/corner_radius" />
        <gradient android:startColor="@color/colorBluest" android:centerColor="@color/colorBluest" android:endColor="@color/colorBluest" android:angle="90"/>
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <stroke android:width="1dp" android:color="@color/colorBluer"/>
        <corners android:radius="@dimen/corner_radius" />
        <solid android:color="@color/colorBluer"/>
    </shape>
</item>
<item >
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
        <stroke android:width="1dp" android:color="@color/colorBlue"/>
        <corners android:radius="@dimen/corner_radius"/>
        <gradient android:startColor="@color/colorBlue" android:centerColor="@color/colorBlue" android:endColor="@color/colorBlue" android:angle="90"/>
    </shape>
</item>
</selector>